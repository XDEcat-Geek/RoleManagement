<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xde.mapper.UserMapper">
    <!--实体类(结果)映射-->
    <resultMap id="UserMap" type="User">
        <result property="id" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="passWord" column="user_pass"/>
        <result property="email" column="user_email"/>
        <result property="sex" column="user_sex"/>
        <result property="age" column="user_age"/>
    </resultMap>
    <!--查询用户-->
    <select id="findUserByName" resultMap="UserMap" parameterType="String">
        select * from user where user_name = #{name}
    </select>
    <!--用户名和密码查询-->
    <select id="findUserByNameAndPass" resultMap="UserMap" parameterType="String">
        select * from user where user_name = #{name} and user_pass = #{pass}
    </select>
</mapper>