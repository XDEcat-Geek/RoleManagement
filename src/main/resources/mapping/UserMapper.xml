<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xde.mapper.UserMapper">
    <!--实体类(结果)映射-->
    <resultMap id="UserMap" type="User">
        <result property="userName" column="user_name"/>
        <result property="email" column="user_email"/>
        <result property="sex" column="user_sex"/>
        <result property="age" column="user_age"/>
    </resultMap>
    <!--查询用户-->
    <select id="findUserByName" resultMap="UserMap" parameterType="String">
        select user_name,user_pass,user_email,user_sex,user_age from user where user_name = #{name}
    </select>
    <!--用户名和密码查询-->
    <select id="findUserByNameAndPass" resultType="String" parameterType="String">
        select user_name from user where user_name = #{name} and user_pass = #{pass}
    </select>

    <!--添加用户-->
    <insert id="addUser" parameterType="User" >
        insert into user values (#{id},#{userName},#{passWord},#{email},#{sex},#{age})
    </insert>
</mapper>